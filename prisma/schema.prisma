// Shift Notes - submitted by DSPs
model ShiftNote {
  id            String    @id @default(cuid())
  clientId      String
  houseId       String
  noteType      String    // progress_note, incident_report, medication_note, activity_note, communication_log
  shiftDate     DateTime  @db.Date
  shiftType     String    // day, evening, overnight
  content       String    @db.Text
  submittedById String
  signatureData String?   // Base64 encoded signature
  submittedAt   DateTime  @default(now())
  reviewedById  String?
  reviewedAt    DateTime?

  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  house         House     @relation(fields: [houseId], references: [id], onDelete: Cascade)
  submittedBy   Employee  @relation(fields: [submittedById], references: [id], onDelete: Cascade)
  reviewedBy    User?     @relation("ShiftNoteReviewedBy", fields: [reviewedById], references: [id])

  @@index([clientId, shiftDate])
  @@index([houseId, shiftDate])
  @@index([submittedById])
}

// Resident Note Prompt - ChatGPT prompt for each resident
model ResidentNotePrompt {
  id            String    @id @default(cuid())
  clientId      String    @unique
  promptText    String    @db.Text
  updatedById   String
  updatedAt     DateTime  @default(now()) @updatedAt
  createdAt     DateTime  @default(now())

  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  updatedBy     User      @relation("NotePromptUpdatedBy", fields: [updatedById], references: [id])
}

// Staff-Resident Assignments - tracks which DSPs work with which residents
model StaffResidentAssignment {
  id                    String    @id @default(cuid())
  staffId               String
  clientId              String
  houseId               String
  assignedById          String?
  assignedAt            DateTime  @default(now())
  isActive              Boolean   @default(true)
  onboardingComplete    Boolean   @default(false)
  onboardingCompletedAt DateTime?

  staff                 Employee  @relation(fields: [staffId], references: [id], onDelete: Cascade)
  client                Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  house                 House     @relation(fields: [houseId], references: [id], onDelete: Cascade)
  assignedBy            User?     @relation("StaffAssignmentCreatedBy", fields: [assignedById], references: [id])
  onboardingAcknowledgments ClientOnboardingAcknowledgment[]

  @@unique([staffId, clientId])
  @@index([staffId])
  @@index([clientId])
  @@index([onboardingComplete])
}

// Resident Onboarding Documents - IAPP, SPA, SMA for initial review
model ResidentOnboardingDocument {
  id            String   @id @default(cuid())
  clientId      String
  documentType  String   // IAPP, SUPPORT_PLAN_ADDENDUM, SELF_MANAGEMENT_ASSESSMENT
  title         String
  fileUrl       String
  version       Int      @default(1)
  effectiveDate DateTime? @db.Date
  uploadedById  String
  uploadedAt    DateTime @default(now())
  isActive      Boolean  @default(true)

  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  uploadedBy    User     @relation("OnboardingDocUploadedBy", fields: [uploadedById], references: [id])
  acknowledgments ClientOnboardingAcknowledgment[]

  @@unique([clientId, documentType, version])
  @@index([clientId])
  @@index([isActive])
}

// Client Onboarding Acknowledgments - tracks supervised review of documents
model ClientOnboardingAcknowledgment {
  id                        String   @id @default(cuid())
  staffResidentAssignmentId String
  staffId                   String
  clientId                  String
  documentId                String

  // Document info (denormalized for record keeping)
  documentType              String
  documentTitle             String
  documentVersion           Int

  // Review session details
  reviewedWithId            String   // User ID of supervisor who conducted review
  reviewedWithName          String
  reviewedWithRole          String
  reviewMethod              String   // in_person, video_call, phone

  // Acknowledgment details
  acknowledgedAt            DateTime @default(now())
  attestationText           String
  signatureData             String   // Base64 encoded signature
  notes                     String?

  // For Employee Training Record PDF integration
  trainingRecordSynced      Boolean  @default(false)
  trainingRecordSyncedAt    DateTime?

  // Transcript
  transcriptUrl             String?

  // Audit fields
  ipAddress                 String?
  userAgent                 String?

  staffResidentAssignment   StaffResidentAssignment @relation(fields: [staffResidentAssignmentId], references: [id], onDelete: Cascade)
  staff                     Employee @relation(fields: [staffId], references: [id], onDelete: Cascade)
  document                  ResidentOnboardingDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([staffId, clientId, documentType])
  @@index([staffId])
  @@index([staffResidentAssignmentId])
}

