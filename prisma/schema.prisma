// Discipline Thresholds for Progressive Discipline
model DisciplineThreshold {
  id            String   @id @default(cuid())
  pointMinimum  Int
  pointMaximum  Int
  actionRequired String
  description   String?
  isActive      Boolean  @default(true)
}

// Point Adjustments (for reductions, additions, or resets)
model PointAdjustment {
  id             String   @id @default(cuid())
  employeeId     String
  adjustmentType String   // REDUCTION, ADDITION, RESET
  points         Int
  reason         String
  approvedById   String
  effectiveDate  DateTime
