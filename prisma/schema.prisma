// DSP Documents - documents requiring acknowledgment
model DSPDocument {
  id                    String   @id @default(cuid())
  documentType          String   // IAPP, SUPPORT_PLAN_ADDENDUM, SELF_MANAGEMENT_ASSESSMENT, POSITIVE_SUPPORT_PLAN, HEALTH_CARE_DIRECTIVE, BEHAVIOR_SUPPORT_PLAN, SEIZURE_PROTOCOL, HOME_POLICIES, ORGANIZATION_POLICIES
  title                 String
  clientId              String?  // null for home/org-level documents
  houseId               String?  // null for org-level documents
  fileUrl               String
  version               Int      @default(1)
  requiresAcknowledgment Boolean @default(true)
  acknowledgmentDueDays Int      @default(7)
  uploadedById          String
  uploadedAt            DateTime @default(now())
  isActive              Boolean  @default(true)

  client               Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  house                House?   @relation(fields: [houseId], references: [id], onDelete: Cascade)
  uploadedBy           User     @relation("DSPDocumentUploadedBy", fields: [uploadedById], references: [id])
  acknowledgments      DocumentAcknowledgment[]

  @@index([clientId])
  @@index([houseId])
  @@index([isActive])
}

// Document Acknowledgments - tracks when DSPs acknowledge documents
model DocumentAcknowledgment {
  id                  String    @id @default(cuid())
  documentId          String
  staffId             String
  openedAt            DateTime?
  viewDurationSeconds Int?
  scrollCompleted     Boolean   @default(false)
  acknowledgedAt      DateTime  @default(now())
  signatureData       String    // Base64 encoded signature
  attestationText     String
  hasQuestions        Boolean   @default(false)
  questionsText       String?
  ipAddress           String?
  userAgent           String?
  transcriptUrl       String?

  document            DSPDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  staff               Employee    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([documentId, staffId])
  @@index([staffId])
}

// Note Prompt Templates - templates for Claude-assisted note writing
model NotePromptTemplate {
  id            String   @id @default(cuid())
  noteType      String   @unique // progress_note, incident_report, medication_note, activity_note, communication_log
