// Chore Templates - defined per home
model Chore {
  id            String   @id @default(cuid())
  houseId       String
  name          String
  description   String?
  category      String   // room_checks, common_areas, kitchen_meals, medication_area, safety, laundry, other
  shifts        String   @default("[]") // JSON array: ["day", "evening", "overnight"]
  requiresPhoto Boolean  @default(false)
  isRequired    Boolean  @default(true)
  sortOrder     Int      @default(0)
  isActive      Boolean  @default(true)
  createdById   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  house         House    @relation(fields: [houseId], references: [id], onDelete: Cascade)
  createdBy     User     @relation("ChoreCreatedBy", fields: [createdById], references: [id])
  completions   ChoreCompletion[]

  @@index([houseId, isActive])
}

// Chore Completions - tracks when chores are done
model ChoreCompletion {
  id          String   @id @default(cuid())
  choreId     String
  houseId     String
  shiftDate   DateTime @db.Date
  shiftType   String   // day, evening, overnight
  completedById String
  completedAt DateTime @default(now())
  photoUrls   String   @default("[]") // JSON array of photo URLs
  notes       String?

  chore       Chore    @relation(fields: [choreId], references: [id], onDelete: Cascade)
  house       House    @relation(fields: [houseId], references: [id], onDelete: Cascade)
  completedBy Employee @relation(fields: [completedById], references: [id], onDelete: Cascade)

  @@unique([choreId, shiftDate, shiftType])
  @@index([houseId, shiftDate])
}

// Resident One-Page Profiles - quick reference for DSPs
model ResidentOnePageProfile {
  id                   String   @id @default(cuid())
  clientId             String   @unique
  photoUrl             String?
  preferredName        String?
  pronouns             String?
  aboutMe              String?  @db.Text
  communication        String?  @db.Text
  dailyRoutine         String?  @db.Text
  likesInterests       String?  @db.Text
  goodDay              String?  @db.Text
  badDay               String?  @db.Text
