// Resident Prompt Contexts - personalized context for Claude prompts
model ResidentPromptContext {
  id                   String   @id @default(cuid())
  clientId             String   @unique
  communicationStyle   String?  @db.Text
  typicalBehaviors     String?  @db.Text
  preferences          String?  @db.Text
  triggers             String?  @db.Text
  supportStrategies    String?  @db.Text
  currentGoalsSummary  String?  @db.Text
  updatedById          String?
  updatedAt            DateTime @default(now())

